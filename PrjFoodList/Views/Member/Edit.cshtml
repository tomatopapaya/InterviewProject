@model PrjFoodList.Models.food

@{
    ViewBag.Title = "美食項目修改";
}

<h2>美食新增</h2>


<form action="@Url.Action("Edit")" method="post"
      enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>美食</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-sm-2">餐廳名稱</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.fTitle, new { htmlAttributes = new { @class = "form-control", required = "required", value= Model.fTitle } })
                @Html.ValidationMessageFor(model => model.fTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden>
            <input name="UserID"  value="@User.Identity.Name"/>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">類型</label>
            <div class="col-sm-10">
                <select name="ftype" class="form-control">
                    <option value="" disabled selected>請選擇</option>
                    <option value="美式" @(Model.ftype == "美式" ? "selected" : "")>美式</option>
                    <option value="日式" @(Model.ftype == "日式" ? "selected" : "")>日式</option>
                    <option value="中式" @(Model.ftype == "中式" ? "selected" : "")>中式</option>
                    <option value="歐式" @(Model.ftype == "歐式" ? "selected" : "")>歐式</option>
                    <option value="韓式" @(Model.ftype == "韓式" ? "selected" : "")>韓式</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">地址</label>
            @*@Html.LabelFor(model => model.fAddress, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-sm-10">
                @Html.EditorFor(model => model.fAddress, new { htmlAttributes = new { @class = "form-control", required = "required", value = Model.fAddress } })
                @Html.ValidationMessageFor(model => model.fAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">加入日期</label>
            @*@Html.LabelFor(model => model.fDate, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-sm-10">
                @Html.EditorFor(model => model.fDate, new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                @Html.ValidationMessageFor(model => model.fDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">加入照片</label>
            @*@Html.LabelFor(model => model.fImg, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-sm-10">
                <input type="file" name="photo" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="新增" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

